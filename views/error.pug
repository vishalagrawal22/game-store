doctype html
html
  head
    title Game Store
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
  body.min-vh-100.d-flex.flex-column
    header
      nav.navbar.navbar-light.bg-light
        .container-fluid(style="padding: 8px 16px")
          div(style="cursor: none")
            img.d-inline-block(src="/images/header-image.png", alt="gamestore", height="80")
            span(style="font-size: 36px; margin-left: 16px") Game Store
          a.btn.btn-secondary.btn-lg(href="/", style="padding: 16px") Go To Home

      div(style="padding: 16px;")
        h1= message
        h2= error.status
        pre #{error.stack}
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
