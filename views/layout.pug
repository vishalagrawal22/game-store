doctype html
html
  head
    title Game Store
    block styles
    link(rel="stylesheet", href="/stylesheets/layout.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
  body.min-vh-100.d-flex.flex-column
    header
      nav.navbar.navbar-light.bg-light
        .container-fluid(style="padding: 8px 16px")
          div(style="cursor: none")
            img.d-inline-block(src="/images/header-image.png", alt="gamestore", height="80")
            span(style="font-size: 36px; margin-left: 16px") Game Store
          if !home
            a.btn.btn-secondary.btn-lg(href="/", style="padding: 16px") Go To Home
    main.flex-grow-1.d-flex
      nav.flex-grow-0.flex-shrink-0.nav-pills.border-end.d-inline-block.align-items-sm-stretch(style="width: 250px; padding: 16px;")
        h4 Categories 
        ul.nav.flex-column.d-inline-flex
          each category in categories
            li.nav-item.fs-6
            if currentCategoryId && currentCategoryId == category._id
              a.nav-link.active(href=category.url aria-current="page")= category.name
            else 
              a.nav-link(href=category.url)= category.name
          else 
            p No category found!

        .action-button
          button.btn.btn-success
            a(href="/devices/create") Create device

          button.btn.btn-success
            a(href="/categories/create") Create category

          button.btn.btn-success
            a(href="/games/create") Create game

      .flex-grow-1
        block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    block script
